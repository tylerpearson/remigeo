<div class="home-content">
  <% if user_signed_in? %>

  <h2>Nearby Notes from You</h2>

  <div class="map-wrap">

    <div id="home-map" style="width:100%; height: 400px"></div>

  </div>

  <% @locations.each do |location| %>
  <div class="bubble-note">
    <%= link_to :controller => "messages", :action => "show", :id => location.messages[0].id do %>
      <div class="note-box">
        <div class="note-box-content">
          <p><%= location.messages[0].content %></p>
        </div>
      </div><!-- end .note-box -->
      <div class="note-meta">
        <p>Left <span><%= time_ago_in_words(location.messages[0].created_at) %> ago</span> for <span class="location-title"><%= location.title %></span></p>
      </div>
    <% end %>
  </div><!--end .bubble-note -->
   <% end %>

    <div class="page-links center">
      <%= link_to "Add a new note", new_message_path, class: "button big-button" %>
    </div>

  <% else %>
      <div class="center">
        <p>RemiGeo is a way to leave yourself personal messages and reminders based on location.</p>
        <%= link_to "Sign Up", signup_path, class: "button big-button" %>
      </div><!--end .center -->
  <% end %>
</div><!-- end .home-content -->